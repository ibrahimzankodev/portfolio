---
export interface Props {
    title: string;
    description: string;
    link?: string;
    date: string;
}

const { title, description, link, date } = Astro.props;
---

<div
    class="absolute w-3 h-3 rounded-full mt-1.5 -start-1.5
    border border-white/20 bg-emerald-500 shadow-[0_0_10px_rgba(16,185,129,0.5)]"
>
</div>
<div class="ml-6 space-y-1">
    <h3 class="text-xl font-bold text-emerald-600 dark:text-emerald-400">
        {title}
    </h3>
    <time
        class="block text-sm font-medium text-slate-500 dark:text-slate-400 italic"
        >{date}</time
    >
    <p
        class="text-base text-slate-600 dark:text-slate-300 text-pretty leading-relaxed pt-2"
    >
        {description}
    </p>
    {
        link && (
            <div class="pt-4">
                <a
                    href={link}
                    class="
                    inline-flex items-center gap-x-2
                    py-2 px-4
                    rounded-xl
                    bg-slate-900 dark:bg-emerald-500/10
                    text-white dark:text-emerald-400
                    text-sm font-semibold
                    border border-slate-800 dark:border-emerald-500/20
                    transition-all duration-300
                    hover:scale-105 hover:bg-emerald-600 dark:hover:bg-emerald-500/20
                    hover:shadow-xl hover:shadow-emerald-500/10
                "
                >
                    Saber m√°s
                    <svg
                        class="size-4"
                        fill="none"
                        viewBox="0 0 24 24"
                        stroke="currentColor"
                        stroke-width="2.5"
                    >
                        <path
                            stroke-linecap="round"
                            stroke-linejoin="round"
                            d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
                        />
                    </svg>
                </a>
            </div>
        )
    }
</div>
