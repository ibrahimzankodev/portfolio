---
import JavaScript from "./icons/JavaScript.astro";

import Css from "./icons/Css.astro";

import Html from "./icons/Html.astro";

import AstroIcon from "../components/icons/AstroIcon.astro";

import Tailwind from "../components/icons/TailwindIcon.astro";

import TypeScript from "../components/icons/TypeScriptIcon.astro";

import ReactIcon from "../components/icons/ReactIcon.astro";

const TAGS = {
    HTML: {
        name: "HTML",
        class: "bg-orange-500/10 text-orange-600 dark:text-orange-400 border border-orange-500/20",
        icon: Html,
    },
    CSS: {
        name: "CSS",
        class: "bg-blue-500/10 text-blue-600 dark:text-blue-400 border border-blue-500/20",
        icon: Css,
    },
    JavaScript: {
        name: "JavaScript",
        class: "bg-yellow-500/10 text-yellow-700 dark:text-yellow-400 border border-yellow-500/20",
        icon: JavaScript,
    },
    Astro: {
        name: "Astro",
        class: "bg-purple-500/10 text-purple-600 dark:text-purple-400 border border-purple-500/20",
        icon: AstroIcon,
    },
    Tailwind: {
        name: "Tailwind",
        class: "bg-cyan-500/10 text-cyan-600 dark:text-cyan-400 border border-cyan-500/20",
        icon: Tailwind,
    },
    TypeScript: {
        name: "TypeScript",
        class: "bg-blue-600/10 text-blue-700 dark:text-blue-400 border border-blue-600/20",
        icon: TypeScript,
    },
    React: {
        name: "React",
        class: "bg-sky-500/10 text-sky-600 dark:text-sky-400 border border-sky-500/20",
        icon: ReactIcon,
    },
};

const PROJECTS4 = [
    {
        title: "MecaToolsXpress",
        description:
            "Tienda online profesional para el sector de ferretería industrial. Incluye gestión de usuarios, pasarela de pago Stripe, carrito dinámico y panel de pedidos. Una solución Fullstack robusta creada para optimizar ventas reales.",
        link: "https://mecatoolsxpress.com",
        github: "https://github.com/ibrahimzankodev/mecaxpress",
        image: "/projects/mecaxpress.png",
        tags: [TAGS.React, TAGS.Tailwind, TAGS.JavaScript],
    },
];
---

<div class="space-y-24">
    {
        PROJECTS4.map(({ image, title, description, tags, link }) => (
            <article class="group flex flex-col md:flex-row gap-8 lg:gap-12 items-center">
                <div class="w-full md:w-1/2 overflow-hidden rounded-2xl border border-black/5 dark:border-white/10 shadow-2xl transition duration-500 group-hover:shadow-emerald-500/10">
                    <a
                        href={link}
                        target="_blank"
                        class="block overflow-hidden"
                    >
                        <img
                            class="w-full h-auto object-cover transition duration-700 group-hover:scale-110"
                            src={image}
                            alt={`Captura del proyecto ${title}`}
                        />
                    </a>
                </div>

                <div class="flex-1 space-y-4">
                    <h3 class="text-2xl md:text-3xl font-extrabold text-slate-900 dark:text-white group-hover:text-emerald-500 transition-colors">
                        {title}
                    </h3>
                    <ul class="flex flex-wrap gap-2">
                        {tags.map((tag) => (
                            <li>
                                <span
                                    class={`inline-flex items-center gap-1.5 rounded-lg text-xs font-bold py-1 px-2.5 ${tag.class}`}
                                >
                                    <tag.icon class="size-3.5" />
                                    {tag.name}
                                </span>
                            </li>
                        ))}
                    </ul>
                    <p class="text-slate-600 dark:text-slate-400 leading-relaxed text-pretty">
                        {description}
                    </p>
                    <div class="pt-4">
                        <a
                            href={link}
                            target="_blank"
                            class="inline-flex items-center gap-2 text-emerald-600 dark:text-emerald-400 font-bold hover:underline group/link"
                        >
                            Visitar sitio web
                            <svg
                                class="size-4 transform group-hover/link:translate-x-1 transition-transform"
                                fill="none"
                                viewBox="0 0 24 24"
                                stroke="currentColor"
                                stroke-width="3"
                            >
                                <path
                                    stroke-linecap="round"
                                    stroke-linejoin="round"
                                    d="M13.5 4.5L21 12m0 0l-7.5 7.5M21 12H3"
                                />
                            </svg>
                        </a>
                    </div>
                </div>
            </article>
        ))
    }
</div>

